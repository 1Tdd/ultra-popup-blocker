{
    "env": {
        "browser": true,
        "es2021": true,
        "greasemonkey": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:userscripts/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "error"
    },
    "plugins": [
        "userscripts"
    ],
    "globals": {
        "GM": "readonly",
        "unsafeWindow": "readonly"
    }
}